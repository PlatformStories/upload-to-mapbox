{
    "name": "upload-to-mapbox",
    "description": "A GBDX task that uploads raster or vector files to Mapbox Studio.",
    "properties": {
        "isPublic": true,
        "timeout": 7200
    },
    "version": "0.0.4",
    "inputPortDescriptors": [
        {
            "name": "input",
            "type": "directory",
            "description": "Contains input file. Acceptable file formats and size limits can be found at https://www.mapbox.com/api-documentation/#uploads.",
            "required": true
        },
        {
            "name": "tileset_name",
            "type": "string",
            "description": "The Mapbox tileset name.",
            "required": true
        },
        {
            "name": "token",
            "type": "string",
            "description": "The Mapbox upload token.",
            "required": true
        },
        {
            "name": "timeout",
            "type": "string",
            "description": "Upload timeout in seconds.",
            "required": false
        }
      ],
    "outputPortDescriptors": [],
    "containerDescriptors": [
        {
            "type": "DOCKER",
            "properties": {
                "image": "platformstories/upload-to-mapbox"
            },
            "command": "python /upload-to-mapbox.py"
        }
    ]
}
